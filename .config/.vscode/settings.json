{
  // General Editor Settings
  "editor.tabSize": 2,
  "editor.rulers": [80],
  "editor.lineNumbers": "off",
  "editor.wordWrap": "on",
  "editor.renderWhitespace": "trailing",
  "editor.cursorStyle": "block",
  "editor.roundedSelection": false,
  "editor.suggest.shareSuggestSelections": true,
  "editor.lineHeight": 1.6,
  "editor.guides.highlightActiveIndentation": false,
  "editor.guides.indentation": false,
  "editor.minimap.enabled": false,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.stickyScroll.enabled": false,
  "editor.detectIndentation": false,
  // "editor.lightbulb.enabled": "off",

  // Explorer Settings
  // "explorer.decorations.colors": false,
  // "explorer.decorations.badges": false,
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.compactFolders": false,

  // Git Settings
  // "git.autofetch": true,
  // "github.copilot.chat.localeOverride": "en",
  // "github.copilot.chat.welcomeMessage": "never",
  // "git.decorations.enabled": false,
  // "gitlens.blame.highlight.enabled": false,
  // "scm.diffDecorations": "none",

  // Workbench Settings
  "workbench.startupEditor": "none",
  "workbench.tree.renderIndentGuides": "none",
  "workbench.tree.indent": 12,
  "workbench.editor.empty.hint": "hidden",
  "workbench.editorAssociations": {
    "git-rebase-todo": "gitlens.rebase",
    "*.svg": "default"
  },
  "workbench.colorCustomizations": {
    "editorRuler.foreground": "#2e2e44"
  },

  // Window Settings
  "window.title": "${activeEditorMedium}",

  // Terminal Settings
  "terminal.integrated.defaultProfile.windows": "Git Bash",
  "terminal.integrated.fontFamily": "'FiraCode Nerd Font', Consolas",
  "terminal.integrated.fontSize": 12,

  // Language Specific Settings
  "[c]": {
    "editor.defaultFormatter": "ms-vscode.cpptools",
    "editor.tabSize": 4
  },
  "[cpp]": {
    "editor.defaultFormatter": "ms-vscode.cpptools",
    "editor.tabSize": 4
  },
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.tabSize": 4
  },
  "[typescript]": {
    "editor.defaultFormatter": "denoland.vscode-deno"
  },

  "scss.lint.unknownAtRules": "ignore",
  "less.lint.unknownAtRules": "ignore",
  "css.lint.unknownAtRules": "ignore",

  // Extension Specific Settings
  "[prisma]": {
    "editor.defaultFormatter": "Prisma.prisma"
  },
  "vim.foldfix": true,
  "vim.ignorecase": false,
  "gitlens.mode.active": "zen",
  "gitlens.graph.minimap.additionalTypes": [
    "localBranches",
    "stashes",
    "remoteBranches",
    "tags"
  ],
  "todo-tree.general.tags": [
    "TODO",
    "FEATURE",
    "FEAT",
    "BUG",
    "FIX",
    "FIXME",
    "FIXIT",
    "ISSUE",
    "WARNING"
  ],
  "todo-tree.general.tagGroups": {
    "FIX": ["FIXME", "FIXIT", "PROBLEM", "FIXTHIS", "ISSUE", "WARNING"],
    "FEATURE": ["FEAT"]
  },
  "todo-tree.highlights.customHighlight": {
    "FIX": {
      "icon": "alert",
      "type": "line",
      "foreground": "#ec4646",
      "background": "#f1505010",
      "iconColour": "#f54539",
      "rulerColour": "#f37a7a",
      "rulerLane": "right"
    },
    "TODO": {
      "icon": "check",
      "type": "tag",
      "iconColour": "#fff",
      "foreground": "#000000",
      "background": "#ffffff",
      "rulerLane": "right",
      "rulerColour": "#fff"
    },
    "FEATURE": {
      "icon": "flame",
      "type": "tag",
      "iconColour": "#3bda77",
      "foreground": "#3bda77",
      "background": "#3cfa3c1f",
      "rulerLane": "right",
      "rulerColour": "#3bda77"
    },
    "BUG": {
      "icon": "bug",
      "type": "tag",
      "foreground": "#ec7b46",
      "background": "#e9704c10",
      "iconColour": "#e6743f",
      "rulerColour": "#fdd5a7",
      "rulerLane": "right"
    }
  },
  "security.workspace.trust.untrustedFiles": "open",
  "debug.console.acceptSuggestionOnEnter": "on",
  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "markdown": false,
    "scminput": false
  },
  "files.exclude": {
    "**/.vscode": true
  },
  "extensions.ignoreRecommendations": true,
  "workbench.statusBar.visible": false,
  "[svg]": {
    "editor.defaultFormatter": "jock.svg"
  },
  "[php]": {
    "editor.defaultFormatter": "bmewburn.vscode-intelephense-client",
    "editor.tabSize": 4
  },
  "[sql]": {
    "editor.defaultFormatter": "inferrinizzard.prettier-sql-vscode"
  },
  "breadcrumbs.enabled": false,
  "gitlens.advanced.fileHistoryShowAllBranches": true,
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },
  "[astro]": {
    "editor.defaultFormatter": "astro-build.astro-vscode"
  },
  "javascript.updateImportsOnFileMove.enabled": "always",
  "material-icon-theme.folders.theme": "specific",
  "diffEditor.codeLens": true,
  "workbench.iconTheme": "material-icon-theme",
  "workbench.colorTheme": "Moonlight II Italic",
  "workbench.activityBar.location": "hidden",
  "[dockerfile]": {
    "editor.defaultFormatter": "ms-azuretools.vscode-docker"
  },
  "workbench.layoutControl.enabled": false,
  "window.menuBarVisibility": "compact",
  "window.commandCenter": false
}
